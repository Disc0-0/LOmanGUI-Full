{
    // Comma-separated list of mod IDs
    "mods": "MOD_ID_1,MOD_ID_2,MOD_ID_3",
    // Path to Last Oasis binaries
    "folder_path": "C:\\path\\to\\lastoasis\\Mist\\Binaries\\Win64\\",
    // API authentication keys
    "customer_key": "YOUR_CUSTOMER_KEY_HERE",
    "provider_key": "YOUR_PROVIDER_KEY_HERE",
    // Discord webhook URL is now consolidated in discord_webhook_url below
    // Path to Steam CMD installation
    "steam_cmd_path": "C:\\path\\to\\steamcmd\\",
    // Number of tiles to run
    "tile_num": 3,
    // Starting port for server
    "start_port": 6668,
    // Starting query port for server
    "start_query_port": 29668,
    // Server identifier
    "identifier": "YOUR_SERVER_IDENTIFIER",
    // Public IP address or domain for players to connect to
    "connection_ip": "your.domain.or.ip.address",
    // Number of player slots per tile
    "slots": 15,
    // Backend server address
    "backend": "backend.last-oasis.com",
    // Server restart time in minutes
    "restart_time": 300,
    // Mod check interval in seconds
    "mod_check_interval": 300,
    // Discord webhook configuration
    "discord_webhook_url": "YOUR_DISCORD_WEBHOOK_URL_HERE",
    // Message types to send to Discord (true/false)
    "discord_message_types": {
        "chat": true,        // Player chat messages
        "join": true,        // Player join notifications
        "tile": true,        // Tile ready notifications
        "kill": true,        // Kill feed messages
        "server_status": true // Server status updates (running, stopped, starting, stopping)
    }
}
